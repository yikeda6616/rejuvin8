form(action="admin/insert.php" method="post")
  input(type="name", name="name" id="inputName" class="form-control" placeholder="Your Name" pattern="[a-zA-Z\s]{4,}" required autofocus)
  input(type="email", name="email" id="inputEmail" class="form-control" placeholder="Email Address" pattern="[a-zA-Z0-9.\-_]{3,}@{1}[a-zA-Z]{3,}[.]{1}[a-zA-Z]{2,}.{0,}" required)
  button(type="submit", value="Submit") Submit